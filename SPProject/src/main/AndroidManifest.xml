<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bpf.sharepoint.project.dates"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bpf.sharepoint.project.dates.ProjectOverview"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bpf.sharepoint.project.dates.AddProject"
            android:label="@string/add_project"
            android:parentActivityName="com.bpf.sharepoint.project.dates.ProjectOverview" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bpf.sharepoint.project.dates.ProjectOverview" />
        </activity>
        <activity
            android:name="com.bpf.sharepoint.project.dates.SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName="com.bpf.sharepoint.project.dates.ProjectOverview" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bpf.sharepoint.project.dates.ProjectOverview" />
        </activity>
    </application>

</manifest>
